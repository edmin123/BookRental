@model IEnumerable<BookRentalProject.Models.Book>
    @using BookRentalProject.Models

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.Partial("_CreateNewButtonPartial")
</p>
<table class="table table-hover table-condensed">
    <tr class="table-header">
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Availibility)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>

        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Availibility)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>


        <td>
            @Html.Partial("_TableButtonPartial", new IndividualButtonModel { BookId = item.Id })
        </td>
    </tr>
}

</table>
